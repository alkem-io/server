mutation updateDiscussion($updateData: UpdateDiscussionInput!) {
  updateDiscussion(updateData: $updateData) {
    profile {
      displayName,
      description
    },
    category
  }
}

Variables:
{
  "updateData": {
      "ID": "uuid",
      "category": "IDEAS",
      "title": "something new",
      "description": "something new"
  }
}