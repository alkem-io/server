mutation UpdateHub($hubData: UpdateHubInput!) {
  updateHub(hubData: $hubData) {
    id
    template {
      aspectTemplates {
        type,
        typeDescription
      }
    }
  }
}

Variables:
{
  "hubData":
		{
      "ID": "un-sdgs",
      "template": {
        "aspectTemplates": [
            {
                "type": "video",
                "defaultDescription": "Video explainer for the challenge",
                "typeDescription": "explainer of the type"
            }
          ]
      }

		}
}