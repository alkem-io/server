mutation agrantCredentialToUser($grantCredentialData: GrantAuthorizationCredentialInput!) {
  grantCredentialToUser(grantCredentialData: $grantCredentialData) {
    name,
    id,
    agent {
      credentials {
      	id,
      	resourceID
      	type
      }
    }
  }
}

Variables:
{
  "grantCredentialData": {
    "userID": 2,
    "resourceID": 1,
    "type": "UserUpdate"
  }
}