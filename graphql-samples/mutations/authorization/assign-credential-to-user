mutation assignCredentialToUser($assignCredentialData: AssignAuthorizationCredentialInput!) {
  assignCredentialToUser(assignCredentialData: $assignCredentialData) {
    name,
    id,
    agent {
      credentials {
      	id,
      	resourceID
      	type
      }
    }
  }
}

Variables:
{
  "assignCredentialData": {
    "userID": 2,
    "resourceID": 1,
    "type": "UserUpdate"
  }
}